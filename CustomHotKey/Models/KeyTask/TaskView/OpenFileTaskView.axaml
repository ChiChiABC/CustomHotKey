<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CustomHotKey.Models.KeyTask.TaskView.OpenFileTaskView" 
             HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
    <ListBox x:Name="ArgList" ItemsSource="{Binding Args}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*, 100">
                    <TextBox Text="{Binding ArgValue}"/>
                    <Button Grid.Column="1" Content="Change" Click="Button_OnClick" HorizontalAlignment="Stretch"/>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Change File" Click="MenuItem_OnClick"/>
            </ContextMenu>
        </ListBox.ContextMenu>
    </ListBox>
</UserControl>
